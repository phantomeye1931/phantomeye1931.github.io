---
import BlogCodeblock from "./BlogCodeblock.astro";
const { class: className = "" } = Astro.props;

const isAstroCode = className.includes("astro-code");
---

{
    isAstroCode ? (
        <BlogCodeblock {...Astro.props}>
            <slot />
        </BlogCodeblock>
    ) : (
        <pre {...Astro.props}><slot /></pre>
    )
}